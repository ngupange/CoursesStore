<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "first_name" }, class:"mb-3 form-control-sm "%>
    <%= f.input :last_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "last_name" }, class:"mb-3 form-control-sm "%>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }, class:"mb-3 form-control-sm "%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" }, class:"mb-3 form-control-sm" %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" }, class:"mb-3 form-control-sm" %>
    <%= f.input :contact,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "contact" }, class:"mb-3 form-control-sm "%>
  </div>

  <div class="form-actions">
  <br/>
    <%= f.button :submit, "Sign up", data: {turbo: false}, class:"btn btn-primary"%>
    
  </div>
  <br/>
<% end %>

<%= render "devise/shared/links" %>
